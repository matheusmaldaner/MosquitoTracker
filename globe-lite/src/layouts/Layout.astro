---
interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="GLOBE Observer Lite - Fast, offline-first citizen science" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="manifest" href="/manifest.json" />
    <meta name="theme-color" content="#105bd8" />
    <title>{title}</title>
  </head>
  <body class="bg-globe-bg min-h-screen text-globe-text">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
