---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ObservationGallery from '../components/ObservationGallery.svelte';
---

<Layout title="Gallery | GLOBE Observer Lite">
  <Header />

  <main>
    <!-- Hero -->
    <section class="py-20 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <span class="inline-block px-3 py-1 text-xs font-medium bg-[color:var(--accent-dim)] text-nasa-cyan rounded-full mb-6">
          Your Observations
        </span>
        <h1 class="text-4xl font-bold text-globe-text mb-4">
          Observation <span class="text-nasa-cyan">Gallery</span>
        </h1>
        <p class="text-lg text-globe-muted max-w-2xl mx-auto">
          View and manage your submitted observations
        </p>
      </div>
    </section>

    <div class="max-w-4xl mx-auto px-4 pb-16">
      <ObservationGallery client:load />
    </div>
  </main>

  <Footer />
</Layout>
