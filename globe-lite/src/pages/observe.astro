---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ObservationForm from '../components/ObservationForm.svelte';

const steps = [
  { num: '1', title: 'Select Protocol', desc: 'Choose Mosquito Habitat, Clouds, Land Cover, or Trees' },
  { num: '2', title: 'Capture Photos', desc: 'Take photos following the protocol guidelines' },
  { num: '3', title: 'Add Details', desc: 'Record observations and environmental data' },
  { num: '4', title: 'Submit', desc: 'Upload instantly or queue for later sync' },
];
---

<Layout title="Observe | GLOBE Observer Lite">
  <Header />

  <main>
    <!-- Hero -->
    <section class="py-16 px-4">
      <div class="max-w-5xl mx-auto text-center">
        <span class="inline-block px-3 py-1 text-xs font-medium bg-nasa-cyan/20 text-nasa-cyan rounded-full mb-6">
          Ready to Observe
        </span>
        <h1 class="text-4xl font-bold text-globe-text mb-4">
          Make an <span class="text-nasa-cyan">Observation</span>
        </h1>
        <p class="text-lg text-globe-muted max-w-2xl mx-auto">
          Capture real-world data and upload when you are online. Every observation supports NASA science.
        </p>

        <div class="flex flex-col sm:flex-row justify-center gap-4 mt-6">
          <a href="/pending" class="secondary-btn">View Pending Uploads</a>
          <a href="/gallery" class="primary-btn">View My Gallery</a>
        </div>
      </div>
    </section>

    <!-- Form + Guidance -->
    <section class="pb-16 px-4">
      <div class="max-w-6xl mx-auto grid lg:grid-cols-2 gap-8 items-start">
        <div class="glass-panel p-6">
          <h2 class="text-2xl font-semibold text-globe-text mb-4">Observation Form</h2>
          <ObservationForm client:only="svelte" />
        </div>

        <div class="space-y-6">
          <div class="glass-panel p-6">
            <h3 class="text-lg font-semibold text-globe-text mb-3">Observation Steps</h3>
            <div class="grid sm:grid-cols-2 gap-4">
              {steps.map((step) => (
                <div class="glass-card p-4 flex gap-3">
                  <div class="w-10 h-10 rounded-full bg-nasa-cyan/20 border border-nasa-cyan/40 flex items-center justify-center text-nasa-cyan font-bold text-sm">
                    {step.num}
                  </div>
                  <div>
                    <h4 class="font-semibold text-globe-text">{step.title}</h4>
                    <p class="text-sm text-globe-muted">{step.desc}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="glass-panel p-6">
            <h3 class="text-lg font-semibold text-globe-text mb-3">Tips for Great Observations</h3>
            <ul class="text-sm text-globe-muted space-y-2">
              <li>• Take clear photos with good lighting.</li>
              <li>• Stand still for accurate GPS coordinates.</li>
              <li>• Add notes if something looks unusual or interesting.</li>
              <li>• You can submit offline and sync later.</li>
            </ul>
          </div>

          <div class="glass-panel p-6 text-center">
            <p class="text-globe-muted mb-4">Need to test image compression first?</p>
            <a href="/test-upload" class="bg-nasa-cyan text-nasa-dark font-semibold px-6 py-3 rounded-xl hover:bg-white transition-colors">Test Image Compression</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
