---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ObservationForm from '../components/ObservationForm.svelte';
---

<Layout title="Observe | GLOBE Observer Lite">
  <Header />
  <main class="py-16">
    <div class="max-w-3xl mx-auto px-4">
      <div class="glass-panel p-8">
        <div class="flex justify-between items-start mb-6">
          <div>
            <h1 class="text-3xl font-bold text-globe-text mb-2">New Observation</h1>
            <p class="text-globe-muted">Capture and submit your observation.</p>
          </div>
          <a 
            href="/pending" 
            class="text-sm px-3 py-1.5 rounded-lg bg-nasa-blue/10 text-nasa-blue hover:bg-nasa-blue/20 transition-colors"
          >
            ðŸ“¤ Pending Uploads
          </a>
        </div>
        
        <ObservationForm client:load />
        
        <a href="/" class="inline-flex items-center gap-2 mt-8 text-nasa-blue hover:underline">
          &larr; Back to Home
        </a>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
