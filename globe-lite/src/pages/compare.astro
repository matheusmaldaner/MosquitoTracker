---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Performance Comparison | GLOBE Observer Lite">
  <Header />

  <main class="py-16">
    <div class="max-w-6xl mx-auto px-4 space-y-12">
      <!-- Header -->
      <section class="text-center">
        <h1 class="text-4xl font-bold text-globe-text mb-3">See the Difference</h1>
        <p class="text-lg text-globe-muted">Real Lighthouse scores. 6x faster load times. Perfect 100s.</p>
        <p class="text-sm text-globe-muted/70 mt-2">Tested on Feb 1, 2026 using Lighthouse 13.0.1</p>
      </section>

      <!-- Lighthouse Scores -->
      <section class="grid md:grid-cols-2 gap-8">
        <div class="glass-card p-6 border-l-4 border-red-500/70">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-2xl font-bold text-globe-text">observer.globe.gov</h2>
            <a href="https://observer.globe.gov" target="_blank" rel="noopener" class="text-xs text-globe-muted hover:text-nasa-cyan">View site ↗</a>
          </div>
          <div class="grid grid-cols-4 gap-3 mb-6">
            <div class="text-center">
              <div class="w-14 h-14 mx-auto rounded-full border-4 border-orange-500 flex items-center justify-center">
                <span class="text-lg font-bold text-orange-500">81</span>
              </div>
              <span class="text-xs text-globe-muted mt-1 block">Performance</span>
            </div>
            <div class="text-center">
              <div class="w-14 h-14 mx-auto rounded-full border-4 border-green-500 flex items-center justify-center">
                <span class="text-lg font-bold text-green-500">93</span>
              </div>
              <span class="text-xs text-globe-muted mt-1 block">Accessibility</span>
            </div>
            <div class="text-center">
              <div class="w-14 h-14 mx-auto rounded-full border-4 border-orange-500 flex items-center justify-center">
                <span class="text-lg font-bold text-orange-500">88</span>
              </div>
              <span class="text-xs text-globe-muted mt-1 block">Best Practices</span>
            </div>
            <div class="text-center">
              <div class="w-14 h-14 mx-auto rounded-full border-4 border-orange-500 flex items-center justify-center">
                <span class="text-lg font-bold text-orange-500">77</span>
              </div>
              <span class="text-xs text-globe-muted mt-1 block">SEO</span>
            </div>
          </div>
          <div class="space-y-3 text-globe-muted text-sm">
            <div class="flex justify-between">
              <span>First Contentful Paint</span>
              <span class="font-mono text-orange-500">0.9s</span>
            </div>
            <div class="flex justify-between">
              <span>Largest Contentful Paint</span>
              <span class="font-mono text-red-500">3.0s</span>
            </div>
            <div class="flex justify-between">
              <span>Speed Index</span>
              <span class="font-mono text-orange-500">1.3s</span>
            </div>
            <div class="flex justify-between">
              <span>Total Network Payload</span>
              <span class="font-mono text-red-500">15,149 KB</span>
            </div>
            <div class="flex justify-between">
              <span>Unused JavaScript</span>
              <span class="font-mono text-red-500">357 KB</span>
            </div>
          </div>
        </div>

        <div class="glass-card p-6 border-l-4 border-nasa-green/70">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-2xl font-bold text-globe-text">GLOBE Observer Lite</h2>
            <a href="https://mosquito-tracker.vercel.app" target="_blank" rel="noopener" class="text-xs text-globe-muted hover:text-nasa-cyan">View site ↗</a>
          </div>
          <div class="grid grid-cols-4 gap-3 mb-6">
            <div class="text-center">
              <div class="w-14 h-14 mx-auto rounded-full border-4 border-green-500 flex items-center justify-center">
                <span class="text-lg font-bold text-green-500">100</span>
              </div>
              <span class="text-xs text-globe-muted mt-1 block">Performance</span>
            </div>
            <div class="text-center">
              <div class="w-14 h-14 mx-auto rounded-full border-4 border-green-500 flex items-center justify-center">
                <span class="text-lg font-bold text-green-500">100</span>
              </div>
              <span class="text-xs text-globe-muted mt-1 block">Accessibility</span>
            </div>
            <div class="text-center">
              <div class="w-14 h-14 mx-auto rounded-full border-4 border-green-500 flex items-center justify-center">
                <span class="text-lg font-bold text-green-500">100</span>
              </div>
              <span class="text-xs text-globe-muted mt-1 block">Best Practices</span>
            </div>
            <div class="text-center">
              <div class="w-14 h-14 mx-auto rounded-full border-4 border-green-500 flex items-center justify-center">
                <span class="text-lg font-bold text-green-500">100</span>
              </div>
              <span class="text-xs text-globe-muted mt-1 block">SEO</span>
            </div>
          </div>
          <div class="space-y-3 text-globe-muted text-sm">
            <div class="flex justify-between">
              <span>First Contentful Paint</span>
              <span class="font-mono text-green-500">0.5s</span>
            </div>
            <div class="flex justify-between">
              <span>Largest Contentful Paint</span>
              <span class="font-mono text-green-500">0.5s</span>
            </div>
            <div class="flex justify-between">
              <span>Speed Index</span>
              <span class="font-mono text-green-500">0.5s</span>
            </div>
            <div class="flex justify-between">
              <span>Total Network Payload</span>
              <span class="font-mono text-green-500">~200 KB</span>
            </div>
            <div class="flex justify-between">
              <span>Unused JavaScript</span>
              <span class="font-mono text-green-500">0 KB</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Key Improvements -->
      <section class="glass-panel p-6">
        <h2 class="text-xl font-bold text-globe-text mb-4 text-center">Key Improvements</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <div class="text-center p-4">
            <div class="text-3xl font-bold text-nasa-cyan mb-1">6x</div>
            <div class="text-sm text-globe-muted">Faster LCP</div>
            <div class="text-xs text-globe-muted/60">3.0s → 0.5s</div>
          </div>
          <div class="text-center p-4">
            <div class="text-3xl font-bold text-nasa-cyan mb-1">75x</div>
            <div class="text-sm text-globe-muted">Smaller Payload</div>
            <div class="text-xs text-globe-muted/60">15MB → 200KB</div>
          </div>
          <div class="text-center p-4">
            <div class="text-3xl font-bold text-nasa-cyan mb-1">+19</div>
            <div class="text-sm text-globe-muted">Performance Score</div>
            <div class="text-xs text-globe-muted/60">81 → 100</div>
          </div>
          <div class="text-center p-4">
            <div class="text-3xl font-bold text-nasa-cyan mb-1">+23</div>
            <div class="text-sm text-globe-muted">SEO Score</div>
            <div class="text-xs text-globe-muted/60">77 → 100</div>
          </div>
        </div>
      </section>

      <!-- Live Test Section -->
      <section class="glass-panel p-8">
        <h2 class="text-2xl font-bold text-globe-text mb-3">Try It Yourself</h2>
        <p class="text-globe-muted mb-4">
          Open Chrome DevTools → Network → Throttle to &quot;Slow 3G&quot; → Reload this page
        </p>
        <div class="glass-card p-4 font-mono text-sm text-globe-muted">
          <p>1. Press F12 (or Cmd+Option+I on Mac)</p>
          <p>2. Go to Network tab</p>
          <p>3. Select &quot;Slow 3G&quot; from dropdown</p>
          <p>4. Reload and watch the difference</p>
        </div>
      </section>

      <!-- Visual Comparison -->
      <section>
        <h2 class="text-2xl font-bold text-center text-globe-text mb-8">Visual Comparison</h2>
        <div class="grid md:grid-cols-2 gap-4">
          <div class="glass-card overflow-hidden">
            <div class="px-4 py-2 text-sm font-mono text-globe-muted border-b border-[color:var(--border)]">
              observer.globe.gov
            </div>
            <div class="h-64 flex items-center justify-center text-globe-muted">
              <p>Current site screenshot here</p>
            </div>
          </div>

          <div class="glass-card overflow-hidden border border-nasa-green/40">
            <div class="px-4 py-2 text-sm font-mono text-nasa-green border-b border-[color:var(--border)]">
              GLOBE Observer Lite
            </div>
            <div class="h-64 flex items-center justify-center text-globe-muted">
              <p>Our version screenshot here</p>
            </div>
          </div>
        </div>
      </section>

      <!-- How We Did It -->
      <section>
        <h2 class="text-2xl font-bold text-center text-globe-text mb-8">How We Achieved This</h2>
        <div class="grid md:grid-cols-3 gap-6">
          <div class="glass-card p-6">
            <h3 class="font-bold mb-2 text-globe-text">Zero JS by Default</h3>
            <p class="text-globe-muted text-sm">
              Astro ships HTML first. JavaScript only where needed.
            </p>
          </div>
          <div class="glass-card p-6">
            <h3 class="font-bold mb-2 text-globe-text">Smart Compression</h3>
            <p class="text-globe-muted text-sm">
              Images compressed client-side before upload. WebP format.
            </p>
          </div>
          <div class="glass-card p-6">
            <h3 class="font-bold mb-2 text-globe-text">Edge Deployment</h3>
            <p class="text-globe-muted text-sm">
              Served from nearest location. Vercel's global CDN.
            </p>
          </div>
        </div>
      </section>

      <!-- CTA -->
      <section class="text-center">
        <a href="/" class="glass-btn inline-flex items-center gap-2 px-8 py-3 font-semibold">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M19 12H5"></path>
            <path d="m12 19-7-7 7-7"></path>
          </svg>
          Back to Home
        </a>
      </section>
    </div>
  </main>

  <Footer />
</Layout>
