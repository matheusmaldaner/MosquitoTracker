---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const stats = [
  { value: '<200KB', label: 'Initial load', sub: '10x lighter than current' },
  { value: '3G Ready', label: 'Field-optimized', sub: 'Works on 2G/3G networks' },
  { value: 'Offline', label: 'Queue & sync', sub: 'No connection required' },
];

const features = [
  {
    title: 'Offline First',
    desc: 'Queue observations and sync when connectivity returns.',
  },
  {
    title: 'Smart Compression',
    desc: 'Client-side WebP compression keeps uploads tiny.',
  },
  {
    title: 'Edge Delivery',
    desc: 'Observations served from the nearest global node.',
  },
  {
    title: 'Open Science',
    desc: 'All data feeds NASA research and education.',
  },
];

const steps = [
  { title: 'Find standing water', desc: 'Look for potential mosquito breeding habitats in your area.' },
  { title: 'Photograph the site', desc: 'Capture clear images from multiple angles.' },
  { title: 'Identify species', desc: 'Use the guide to identify larvae if present.' },
  { title: 'Submit observation', desc: 'Upload instantly or queue for later sync.' },
];
---

<Layout title="GLOBE Observer Lite">
  <Header />

  <main>
    <!-- Hero -->
    <section class="hero-surface py-16">
      <div class="max-w-6xl mx-auto px-4">
        <div class="glass-panel p-8 md:p-12 text-center max-w-4xl mx-auto">
          <span class="glass-badge px-4 py-1.5 text-xs font-semibold tracking-wide">Low-bandwidth prototype for GeoEMERGE 2026</span>
          <h1 class="text-4xl lg:text-6xl font-bold text-globe-text mt-6 mb-2">
            Global Science.
          </h1>
          <h1 class="text-4xl lg:text-6xl font-bold text-nasa-cyan mb-6">
            Local Access.
          </h1>
          <p class="text-globe-muted text-lg mb-8 max-w-2xl mx-auto">
            GLOBE Observer Lite brings citizen science to everyone, even on 2G networks.
            <strong class="text-globe-text">Built for limited connectivity.</strong>
          </p>
          
          <!-- Stats row -->
          <div class="grid sm:grid-cols-3 gap-4 mb-8">
            {stats.map((stat) => (
              <div class="glass-card p-4 text-center">
                <div class="text-2xl font-bold text-nasa-cyan">{stat.value}</div>
                <div class="text-sm font-medium text-globe-text">{stat.label}</div>
                <div class="text-xs text-globe-muted mt-1">{stat.sub}</div>
              </div>
            ))}
          </div>
          
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/observe" class="bg-nasa-cyan text-nasa-dark font-semibold px-8 py-3 rounded-xl hover:bg-white transition-colors">
              Start Observing
            </a>
            <a href="/compare" class="glass-btn px-8 py-3 font-semibold">
              See the Comparison
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Problem -->
    <section class="glass-section py-16">
      <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-10">
          <h2 class="text-3xl font-bold text-globe-text">The Digital Divide in Citizen Science</h2>
          <p class="text-globe-muted mt-2">Current apps assume high-speed internet. We're changing that.</p>
        </div>
        <div class="grid md:grid-cols-2 gap-8">
          <div class="glass-card p-6 border-l-4 border-red-500/50">
            <h3 class="text-xl font-bold text-globe-text mb-4">Current GLOBE Observer</h3>
            <ul class="space-y-3 text-globe-muted">
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 rounded-full bg-red-500/70"></span>
                5–8 seconds on 3G
              </li>
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 rounded-full bg-red-500/70"></span>
                2–5 MB initial transfer
              </li>
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 rounded-full bg-red-500/70"></span>
                No offline mode
              </li>
            </ul>
          </div>
          <div class="glass-card p-6 border-l-4 border-nasa-green/50">
            <h3 class="text-xl font-bold text-globe-text mb-4">GLOBE Observer Lite</h3>
            <ul class="space-y-3 text-globe-muted">
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 rounded-full bg-nasa-green/70"></span>
                &lt;2 seconds on 3G
              </li>
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 rounded-full bg-nasa-green/70"></span>
                &lt;200 KB initial transfer
              </li>
              <li class="flex items-center gap-3">
                <span class="w-2 h-2 rounded-full bg-nasa-green/70"></span>
                Offline-first workflow
              </li>
            </ul>
          </div>
        </div>
      </div>
    </section>

    <!-- Features -->
    <section class="glass-section py-16">
      <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-10">
          <h2 class="text-3xl font-bold text-globe-text">Built for Limited Connectivity</h2>
          <p class="text-globe-muted">Every interaction is designed to minimize bandwidth.</p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {features.map((feature) => (
            <div class="glass-card p-6">
              <h3 class="font-semibold text-globe-text mb-2">{feature.title}</h3>
              <p class="text-sm text-globe-muted">{feature.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- How it works -->
    <section class="glass-section py-16">
      <div class="max-w-6xl mx-auto px-4">
        <div class="text-center mb-10">
          <h2 class="text-3xl font-bold text-globe-text">How It Works</h2>
          <p class="text-globe-muted mt-2">Optimized for Mosquito Habitat Mapper protocol.</p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          {steps.map((step, index) => (
            <div class="glass-card p-6 flex flex-col">
              <div class="w-10 h-10 rounded-full bg-nasa-cyan/20 border border-nasa-cyan/40 flex items-center justify-center text-nasa-cyan font-bold mb-4">
                {index + 1}
              </div>
              <h3 class="font-semibold text-globe-text mb-2">{step.title}</h3>
              <p class="text-sm text-globe-muted">{step.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="cta-surface py-16">
      <div class="max-w-4xl mx-auto px-4 text-center">
        <div class="glass-panel p-8">
          <h2 class="text-3xl font-bold text-globe-text mb-4">Ready to Observe Anywhere?</h2>
          <p class="text-globe-muted mb-6">
            Experience the low-bandwidth prototype and help expand global participation in NASA science.
          </p>
          <div class="flex flex-wrap justify-center gap-4">
            <a href="/observer" class="bg-nasa-cyan text-nasa-dark font-semibold px-8 py-3 rounded-lg hover:bg-white transition-colors">
              Explore the App
            </a>
            <a href="/compare" class="glass-btn inline-flex items-center gap-2 px-8 py-3 font-semibold">
              Watch the Speed Demo
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>
